<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record model="ir.ui.view" id="only_form_view_inherit_motorcycle">
            <field name="name">only.form.view.inherit.motorcycle</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='general_information']" position="after">
                    <field name="detailed_type"/>
                </xpath>

                <xpath expr="//sheet//notebook" position="inside">
                    <page string="Motorcycle" attrs="{'invisible':[('detailed_type', 'like', 'Motorcycle')]}">
                        <group>
                            <group>
                                <separator string="Motorcycle Information" />
                                <field name="make" />
                                <field name="model" />
                                <field name="year" />
                                <field name="curb_weight" />
                                <field name="launch_date" />
                            </group>
                            <group>
                                <separator string="Motor Information" />
                                <field name="horse_power" />
                                <field name="top_speed" />
                                <field name="torque" />
                            </group>
                        </group>
                        <group>
                            <group>
                                <separator string="Power Information" />
                                <field name="battery_capacity" />
                                <field name="charge_time" />
                                <field name="m_range" />
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>